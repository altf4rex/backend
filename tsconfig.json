{
  "compilerOptions": {
    "outDir": "./dist",  // Здесь указываем, куда будут компилироваться файлы
    "rootDir": "./src",  // Исходные файлы находятся в папке src
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "ES2020",
    "module": "commonjs",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],  // Компилируются все файлы в src
  "exclude": ["node_modules"]  // Исключаем папку node_modules
}


